<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:icon="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:background="#ff2cc17b"
        android:id="@+id/linearLayout"
        android:weightSum="3"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_learncenter_morecourse_search"
           android:layout_weight="0.8"
            android:layout_marginLeft="20sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bg"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22sp"
            android:src="@mipmap/ico_course_detail_message"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20sp"
            android:layout_weight="0.8"
            />
    </LinearLayout>
    <!--底部导航栏相对布局 开始-->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_alignParentBottom="true"
       android:clickable="true"
       android:focusable="true"
       >
       <!--底部导航在相对布局下，建立一个水平方向上的线性布局-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:weightSum="4"
           >
           <!--四个导航按钮采用相对布局-->
           <!--首页按钮相对布局,权重为1-->
           <RelativeLayout
               android:id="@+id/tab_main_home_layout"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <!--首页image-->
               <ImageView
                   android:id="@+id/tab_main_home_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_recommend_p"
                   />
               <TextView
                   android:id="@+id/tab_main_home_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_home_img"
                   android:layout_centerHorizontal="true"
                   android:text="首页"
                   android:textSize="18dp"
                   />
           </RelativeLayout>


           <!--全部课程按钮相对布局,权重为1-->
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <!--全部课程image-->
               <ImageView
                   android:id="@+id/tab_main_categories_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_categories_n"
                   />
               <TextView
                   android:id="@+id/tab_main_categories_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_categories_img"
                   android:layout_centerHorizontal="true"
                   android:text="全部课程"
                   android:textSize="18dp"
                   />
           </RelativeLayout>

           <!--我的学习按钮相对布局,权重为1-->
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <!--我的学习image-->
               <ImageView
                   android:id="@+id/tab_main_center_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_center_n"
                   />
               <TextView
                   android:id="@+id/tab_main_center_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_center_img"
                   android:layout_centerHorizontal="true"
                   android:text="我的学习"
                   android:textSize="18dp"
                   />
           </RelativeLayout>

           <!--帐号导航按钮相对布局,权重为1-->
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <!--帐号image-->
               <ImageView
                   android:id="@+id/tab_main_account_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_account_n"
                   />
               <TextView
                   android:id="@+id/tab_main_account_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_account_img"
                   android:layout_centerHorizontal="true"
                   android:text="帐号"
                   android:textSize="18dp"
                   />
           </RelativeLayout>


       </LinearLayout>

   </RelativeLayout>


</RelativeLayout>