<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:icon="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:background="#ff2cc17b"
        android:id="@+id/top_linearLayout"
        android:weightSum="3"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_learncenter_morecourse_search"
           android:layout_weight="0.8"
            android:layout_marginLeft="20sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bg"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22sp"
            android:src="@mipmap/ico_course_detail_message"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20sp"
            android:layout_weight="0.8"
            />
    </LinearLayout>
    <!--中间内容布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_linearLayout"
        android:layout_above="@+id/bottom_layout"
        android:orientation="vertical"

        android:weightSum="1">
        <!--设置使用scroll显示中间的所有内容-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView_main"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:scrollbarSize="5px"
            android:paddingRight="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <!--为轮播图做的布局-->
                <LinearLayout
                    android:id="@+id/main_banaer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#06f"
                        android:src="@mipmap/b1"
                        />
                </LinearLayout>
                <!--第一行布局-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:orientation="horizontal"
                    android:background="#fff"

                    android:gravity="fill_horizontal"

                    android:weightSum="4"
                     >
                    <!--子项布局开始，每个都是一个按钮和文字1_1-->
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <Button
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:background="@mipmap/widget_ratio_front"
                            android:text="移" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5sp"
                            android:text="移动开发"
                            />
                    </LinearLayout>
                    <!--子项布局开始，每个都是一个按钮和文字1_2-->
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <Button
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:text="测"
                            android:background="@mipmap/widget_ratio_front"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="测试开发"
                            />
                    </LinearLayout>
                    <!--子项布局开始，每个都是一个按钮和文字1_3-->
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <Button
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:text="玩"
                            android:background="@mipmap/widget_ratio_front"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="娱乐田地"
                            />
                    </LinearLayout>
                    <!--子项布局开始，每个都是一个按钮和文字1_4-->
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"                       android:orientation="vertical"

                        android:layout_weight="1"
                        >
                        <Button
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:background="@mipmap/widget_ratio_front"
                            android:text="学"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="天天向上"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!--第二行布局-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    >
                    <!--第二行第一个-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"

                        >
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:text="网"
                            android:background="@mipmap/widget_ratio_front"
                                        />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="网络编辑"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <!--第二行第er个-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:text="络"
                            android:background="@mipmap/widget_ratio_front"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Ahuu"
                           android:gravity="center"
                            />
                        </LinearLayout>
                    <!--第二行第三个-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:text="摄"
                            android:background="@mipmap/widget_ratio_front"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="摄影摄像"
                            android:gravity="center"
                            />
                    </LinearLayout>
                    <!--第二行第四个-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        >
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:text="生"
                            android:background="@mipmap/widget_ratio_front"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:text="体育江山"
                            />

                    </LinearLayout>
                </LinearLayout>

            <!--接下来2张图片-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:weightSum="3"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.45"
                        android:src="@mipmap/main_1"
                        />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.45"
                        android:src="@mipmap/main_2"
                        />
                </LinearLayout>
                    <!--免费好课布局-->
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/section_title_tip"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="5dp"
                            />
                        <TextView
                            android:id="@+id/textview_arrow_free"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:text="免费好课"
                            android:textSize="18sp"
                            />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/free_layout_right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            >
                        <TextView
                            android:id="@+id/textview_free_more"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:text="教你学唱歌"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:id="@+id/ico_arrow_free"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/triangle"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textview_free_more"
                            android:paddingRight="5dp"
                            />
                        </RelativeLayout>

                    </RelativeLayout>
                <!--下面的四张图片+文字-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.45"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/main_2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="零基础学音乐"
                        android:textSize="18sp"
                        android:gravity="center"
                        />
                    </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="0.1">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           />
                   </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.45"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_2"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="单词速记"
                            android:textSize="18sp"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.45"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_2"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10天学会单片机"
                            android:textSize="18sp"
                            android:gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.45"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_1"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="快速学好高数"
                            android:textSize="18sp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </LinearLayout>
                <!--Scroll下的子布局结束-->
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <!--底部导航栏相对布局 开始-->
   <RelativeLayout
       android:id="@+id/bottom_layout"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_alignParentBottom="true"
       android:clickable="true"
       android:focusable="true"
       >
       <!--底部导航在相对布局下，建立一个水平方向上的线性布局-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:paddingTop="5sp"
           android:weightSum="4"
           >
           <!--四个导航按钮采用相对布局-->
           <!--首页按钮相对布局,权重为1-->
           <RelativeLayout
               android:id="@+id/tab_main_home_layout"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"

               >
               <!--首页image-->
               <ImageView
                   android:id="@+id/tab_main_home_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_recommend_p"
                   />
               <TextView
                   android:id="@+id/tab_main_home_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_home_img"
                   android:layout_centerHorizontal="true"
                   android:text="首页"
                   android:textSize="14dp"
                   />
           </RelativeLayout>
           <!--全部课程按钮相对布局,权重为1-->
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <!--全部课程image-->
               <ImageView
                   android:id="@+id/tab_main_categories_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_categories_n"
                   />
               <TextView
                   android:id="@+id/tab_main_categories_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_categories_img"
                   android:layout_centerHorizontal="true"
                   android:text="全部课程"
                   android:textSize="14dp"
                   />
           </RelativeLayout>

           <!--我的学习按钮相对布局,权重为1-->
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <!--我的学习image-->
               <ImageView
                   android:id="@+id/tab_main_center_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_center_n"
                   />
               <TextView
                   android:id="@+id/tab_main_center_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_center_img"
                   android:layout_centerHorizontal="true"
                   android:text="我的学习"
                   android:textSize="14dp"
                   />
           </RelativeLayout>

           <!--帐号导航按钮相对布局,权重为1-->
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <!--帐号image-->
               <ImageView
                   android:id="@+id/tab_main_account_img"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/tab_main_account_n"
                   />
               <TextView
                   android:id="@+id/tab_main_account_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_below="@+id/tab_main_account_img"
                   android:layout_centerHorizontal="true"
                   android:text="帐号"
                   android:textSize="16dp"
                   />
           </RelativeLayout>

       </LinearLayout>

   </RelativeLayout>

</RelativeLayout>