<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:icon="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/course_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        >
        <ScrollView
            android:id="@+id/scrollView_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:scrollbarSize="5px"
            android:visibility="visible"
            >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
        <!--2张图片-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="2"
                android:src="@mipmap/main_1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="2"
                android:src="@mipmap/main_2"
                />
        </LinearLayout>
        <!--热门文字链接-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="UI设计师"
                android:textColor="#6563b1"
                android:textColorLink="#08f"
                android:textSize="22sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="产品经理"
                android:textColor="#6563b1"
                android:textColorLink="#08f"
                android:textSize="22sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#6563b1"
                android:text="测试工程师"
                android:autoLink="all"
                android:textColorLink="#08f"
                android:textSize="22sp"
                />
        </LinearLayout>
        <!--分类布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >
            <!--标题栏-互联网-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#e2e4e7"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    >
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="IT互联网"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical|bottom"
                        android:textSize="20sp"
                        />
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="IT INTERNET"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical|bottom"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:src="@mipmap/course_cate_hlw"
                        />
                </LinearLayout>
            </RelativeLayout>
            <!--互联网下的内容布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                >
                <!--It互联网GridView-->
                <GridView
                    android:id="@+id/grid_course_it"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:drawSelectorOnTop="false"
                    android:numColumns="3"
                    android:listSelector="@null"
                    tools:listitem="@android:layout/simple_list_item_2" />
            </LinearLayout>
            <!--标题栏-职场技能-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#e2e4e7"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="职场技能"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical|bottom"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="OCCUPATIONNAL SKILLS"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical|bottom"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:src="@mipmap/course_cate_zcts"
                        />
                </LinearLayout>
            </RelativeLayout>
            <!--职场技能下的内容布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                >
                <!--职场技能GridView-->
                <GridView
                    android:id="@+id/grid_course_kill"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:drawSelectorOnTop="false"
                    android:numColumns="3"
                    android:listSelector="@null"
                    tools:listitem="@android:layout/simple_list_item_2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </ScrollView>
  </LinearLayout>